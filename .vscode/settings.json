{
  "editor.tabSize": 2,
  "editor.detectIndentation": false,
  "editor.insertSpaces": true,
  "editor.formatOnSave": true,
  "eslint.autoFixOnSave": true,
  "editor.rulers": [
    80,
    120
  ],
  "search.exclude": {
    "**/node_modules": true,
    "**/app/bin/": true,
    "**/app/src/frontend/css/bootstrap/": true,
    "**/dist/": true,
  },
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/node_modules": true,
  }
}